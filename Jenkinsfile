pipeline {
	agent any
	stages {
		stage("checkout") {
			steps {
			    echo 'Checking out the application...'
			}
		}
		stage("build") {
			steps {
			    echo 'building the application...'
			}
		}
		stage("test") {
            steps {
                echo 'testing the application...'
            }
        }
		stage("deploy") {
            steps {
                echo 'deploying the application...'
            }
        }
	}
}